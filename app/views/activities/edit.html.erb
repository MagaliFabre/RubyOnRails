<div class="activity-form">
  <h2>Edit <%= @activity.name %> Activity</h2>
  <%= form_for @activity, url: activity_path(@activity), method: :patch do |form| %>
    <%= form.hidden_field :userid %>

    <div class="form-group">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

   <div class="form-group">
      <%= form.label :date_and_time, class: 'form-label' %>
      <%= form.datetime_select :date_and_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :duration, class: 'form-label' %>
      <%= form.number_field :duration, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :comments, class: 'form-label' %>
      <%= form.text_area :comments, class: 'form-control' %>
    </div>

    <%= form.submit 'Update Activity', class: 'btn-primary' %>
    <%= link_to 'Delete Activity', custom_delete_activity_path(@activity), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-secondary' %>

  <% end %>
</div>
