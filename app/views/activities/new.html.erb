<!-- app/views/activities/new.html.erb -->

<div class="activity-form">
  <h2>Create a New <%= @activity.name %> Activity</h2>
  <%= form_for @activity, url: activities_path do |form| %>
    <%= form.hidden_field :user_id %>
    <%= form.text_field :name, readonly: true, class: 'form-control' %>

    <div class="form-group">
      <%= form.label :date, class: 'form-label' %>
      <%= form.date_field :date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :duration, class: 'form-label' %>
      <%= form.number_field :duration, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :comments, class: 'form-label' %>
      <%= form.text_area :comments, class: 'form-control' %>
    </div>

    <%= form.submit 'Create Activity', class: 'btn btn-primary' %>
  <% end %>

  <ul>


</div>
